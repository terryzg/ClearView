{
    "name": "ClearView",
    "description": "An AI chatbot that users can speak to and disclose their specific accessibility needs.",
    "homepage_url": "https://github.com/terryzg/HACK-NC-2024",
    "version": "3.1.0",
    "manifest_version": 3,
    "action": {
      "default_title": "AI chatbot for Disabilities",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "image1.png",
        "48": "image2.png",
        "128": "image2.png"
      }
    },
    "icons": {
      "16": "image1.png",
      "48": "image2.png",
      "128": "image2.png"
    },
    "content_scripts": [
      {
      "js": [
        "adhd.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "js": [
        "dyslexiafont.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "js": [
        "epilespy.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
        {
      "js": [
        "eyestrain.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
        {
      "js": [
        "magnify.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
        {
      "js": [
        "colorblind.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
    ],
    "background": {
  "service_worker": "background.js"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  
  }
  

